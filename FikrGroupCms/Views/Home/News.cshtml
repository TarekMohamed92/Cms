    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Master.cshtml";
}

        <!-- title_page -->
<div class="title_internal_page" style="background:#FFF !important">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 content-head style2 text-center col-lg-offset-2 col-lg-8 col-md-12">
